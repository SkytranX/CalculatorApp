<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="9"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:background="@color/black">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:paddingRight="10dp"
            android:textColorHint="@color/white"
            android:textSize="100sp"
            android:textColor="@color/white"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/text_screen"/>

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:orientation="horizontal"
        android:weightSum="9">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="6.5"
            android:orientation="vertical"
            android:weightSum="4"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:weightSum="3"
                android:layout_weight="1">
                 <Button
               android:layout_width="0dp"
               android:layout_height="match_parent"
               android:layout_weight="1"
               android:background="@color/black"
               android:text="7"
               android:textSize="35sp"
               android:textColor="@color/white"
                     android:id="@+id/n_7"
               />
                <Button
               android:layout_width="0dp"
               android:layout_height="match_parent"
               android:layout_weight="1"
               android:background="@color/black"
               android:text="8"
               android:textSize="35sp"
               android:textColor="@color/white"
                    android:id="@+id/n_8"
               />
                <Button
               android:layout_width="0dp"
               android:layout_height="match_parent"
               android:layout_weight="1"
               android:background="@color/black"
               android:text="9"
               android:textSize="35sp"
               android:textColor="@color/white"
                    android:id="@+id/n_9"
               />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:weightSum="3"
                android:layout_weight="1">
                 <Button
               android:layout_width="0dp"
               android:layout_height="match_parent"
               android:layout_weight="1"
               android:background="@color/black"
               android:text="4"
               android:textSize="35sp"
               android:textColor="@color/white"
               android:id="@+id/n_4"
               />

                <Button
               android:layout_width="0dp"
               android:layout_height="match_parent"
               android:layout_weight="1"
               android:background="@color/black"
               android:text="5"
               android:textSize="35sp"
               android:textColor="@color/white"
                    android:id="@+id/n_5"
               />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/black"
                    android:text="6"
                    android:textColor="@color/white"
                    android:textSize="35sp"
                    android:id="@+id/n_6"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:weightSum="3"
                android:layout_weight="1">
                 <Button
               android:layout_width="0dp"
               android:layout_height="match_parent"
               android:layout_weight="1"
               android:background="@color/black"
               android:text="1"
               android:textSize="35sp"
               android:textColor="@color/white"
               android:id="@+id/n_1"
                     />
                <Button
               android:layout_width="0dp"
               android:layout_height="match_parent"
               android:layout_weight="1"
               android:background="@color/black"
               android:text="2"
               android:textSize="35sp"
               android:textColor="@color/white"
               android:id="@+id/n_2"
               />
                <Button
               android:layout_width="0dp"
               android:layout_height="match_parent"
               android:layout_weight="1"
               android:background="@color/black"
               android:text="3"
               android:textSize="35sp"
               android:textColor="@color/white"
               android:id="@+id/n_3"
               />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:weightSum="3"
                android:layout_weight="1">
                 <Button
               android:layout_width="0dp"
               android:layout_height="match_parent"
               android:layout_weight="1"
               android:background="@color/black"
               android:text="."
               android:textSize="35sp"
               android:textColor="@color/white"
               android:id="@+id/n_Dot"
               />
                <Button
               android:layout_width="0dp"
               android:layout_height="match_parent"
               android:layout_weight="1"
               android:background="@color/black"
               android:text="0"
               android:textSize="35sp"
               android:textColor="@color/white"
               android:id="@+id/n_0"
               />
                <Button
               android:layout_width="0dp"
               android:layout_height="match_parent"
               android:layout_weight="1"
               android:background="@color/black"
               android:text="DEL"
               android:textSize="20sp"
               android:textColor="@color/white"
               android:id="@+id/n_DEL"
               />

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="2.5"
            android:weightSum="5"
            >
            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".95"
                android:background="@color/grey"
                android:text="/"
                android:textSize="40sp"
                android:textColor="@color/white"
                android:id="@+id/n_Div"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".95"
                android:background="@color/grey"
                android:text="x"
                android:textSize="30sp"
                android:textColor="@color/white"
                android:id="@+id/n_Prod"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".95"
                android:background="@color/grey"
                android:text="-"
                android:textSize="60sp"
                android:textColor="@color/white"
                android:id="@+id/n_Min"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".95"
                android:background="@color/grey"
                android:text="+"
                android:textSize="45sp"
                android:textColor="@color/white"
                android:id="@+id/n_Add"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.20"
                android:background="@color/infrared"
                android:text="="
                android:textSize="45sp"
                android:textColor="@color/white"
                android:id="@+id/n_Equal"
                />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>